{% extends "@User/Page_client.html.twig" %}
{% block body %}
    <section class="feature_product_area section_gap">
        <div class="main_box">
            <div class="container-fluid">
                <div class="row">

                </div>
                <div class="row">

                    {% for p in prod %}
                        {% if p.nvprix==0 %}
                            {% if p.nvquantite!= null %}

<center>
                                <div class="col col">

                                    <div class="col-md-4 col-sm-6 co-xs-12 gal-item">
                                        <div class="f_p_img">
                                            <a href="#" data-toggle="modal" data-target="#2">
                                                <img src="{{ asset('Upload/')}}{{ p.nomfile }}"  width="200" height="250" class="img-rectangle" class="col col "  /></a>
                                            <div class="p_icon">
                                                <a onclick="addtoCart({{ p.id }},'{{ p.nom }}',{{ p.prix }},'{{ p.nomfile }}')" >
                                                    <i class="lnr lnr-cart"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <br>
                                        <h4>{{ p.nom }}</h4>
                                        <h5>{{ p.prix }} TND</h5>
                                        <h6>{{ p.type}}</h6>


                                    </div>

                                </div>
</center>
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                </div>
                <div class="navigation text-center " ><br>
                    <br>
                    <br>
                    {{ knp_pagination_render(prod) }}

                </div>
            </div>

        </div>

    </section>
{% endblock %}