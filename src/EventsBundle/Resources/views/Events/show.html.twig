{#{% extends "@User/Page_client.html.twig" %}#}
{#{% block body %}#}

    <div id="blog-home" class="page">
        <div class="container">
            <div class="row">
                <!-- Blog Entries Column -->
                <div class="col-lg-9 page-with-sidebar">
                    <div class="row">


                        <div class="container">
                            <h2>{{ evenement.nom }}</h2>
                            <div class="row mt-4">
                                <!-- event INFO -->
                                <div class="col-lg-5">
                                    <!-- image event -->
                                    <img class="img-fluid rounded" src="{{ asset('Upload/') }}{{ evenement.nomfile }}"/>
                                </div>
                                <!-- col-lg-7 -->
                            </div>
                            <!-- /row -->


                            <!-- map-->

                            <!-- custom link -->

                            <div class="col-lg-2">
                                <!-- list -->
                                <ul class="list-unstyled colored-icons font-weight-bold res-margin">
                                    <br><br>
                                    <li>
                                        <span><i class="fas fa-map-marker-alt mr-2"></i>Organisateur : {{ evenement.organisateur }}</span>
                                    </li>

                                    <li>
                                        <span><i class="fas fa-map-marker-alt mr-2"></i>Numéro Tele : {{ evenement.num }}</span>
                                    </li>


                                    <li>
                                        <span><i class="fas fa-map-marker-alt mr-2"></i>Type : {{ evenement.type }}</span>
                                    </li>


                                    <li>
                                        <span><i class="fas fa-calendar-alt mr-2"></i> Date début : {{ evenement.datedebut|date('d-m-Y') }}</span>
                                    </li>


                                    <li>
                                        <span><i class="fas fa-calendar-alt mr-2"></i> Date fin : {{ evenement.datefin|date('d-m-Y') }}</span>
                                    </li>



                                    <li>
                                        <span><i class="fas fa-map-marker-alt mr-2"></i>Lieu : {{ evenement.adresse }}</span>
                                    </li>
                                    <li>
                                        <span><i class="flaticon-man-combing-a-dog"></i> NBR Participants : {{ evenement.nbrparticipant }}</span>
                                    </li>
                                    <li>

                                        <span>
                                            <i class="flaticon-man-combing-a-dog"></i>
                                                <p>
                                                    Description :   {{ evenement.description }}
                                                </p>
                                        </span>


                                    </li>

                                </ul>

                                <!-- Button -->
                                <form method="POST" name="fp">



                                    <input type="submit" name="part"  value="Participé">


                                </form>



                                <br><br><br><br>

                                <div id="map-canvas" class="mt-5 map-small-height">
                                    <a class="custom-link  mt-5" href="{{ path('event_Index') }}">Go back to Events page</a>
                                </div>
                            </div>




                        </div>











                    </div>
                    <!-- /row -->

                    <!-- /col-md -->
                </div>
                <!-- /page-with-sdiebar -->
                <!-- Sidebar -->


                <div id="sidebar" class="bg-light h-100 col-lg-3 card pattern3">
                    <!--widget-area -->
                    <div class="widget-area">
                        <h5 class="sidebar-header"></h5>



                        {#<form method="POST" name="formee" >#}
                            {#<div class="input-group">#}
                                {#<input type="text" name="test" class="form-control" placeholder="Your FeedBack... ">#}
                                    {#<span class="input-group-btn">#}
                                        {#<button class="btn btn-secondary btn-sm" type="submit" >ADD</button>#}
                                    {#</span>#}

                                    {#{% if success is defined %}#}
                                        {#<div class="alert alert-success">#}
                                            {#<i class="fa fa-info-circle"></i>#}
                                            {#{{ success }}#}
                                        {#</div>#}
                                    {#{% endif %}#}
                            {#</div>#}
                        {#</form>#}






                        <div class="margin-b-30">
                            <h3>Poster un commentaire</h3>
                            <hr>

                            <form action="{{ path("pi_forum_ajout_Commantaire",{'id':evenement.id}) }}"  method="POST" >
                                <div class="form-group">
                                    <input type="text" class="form-control" id="Subject" placeholder="Commentaire" name="contenu">
                                </div>
                                <div class="text-right">
                                    <input type="submit" class="btn btn-lg btn-primary" value="Submit">

                                    {#<button type="submit" class="btn btn-lg btn-primary" value="Submit" >#}
                                </div>
                            </form>

                        </div>







                    </div>



                    <!--/widget-area -->
                    <div class="widget-area">
                        <h5 class="sidebar-header">FeedBacks</h5>
                        <div class="list-group">
                            {% for feeds in feedEvent %}
                                <div class="alert alert-light" role="alert">
                                    {{ feeds.description }}
                                    <br><br>

                                    <center><h9>--------------------</h9></center>
                                    <center><h9>{{ feeds.dateFeed|date('d-m-Y') }}</h9></center>


                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!--/widget-area -->
                </div>
                <!--/sidebar -->
            </div>


            <!-- /.row -->
        </div>
        <!-- /.container -->
    </div>

{#{% endblock %}#}

