{% extends "@User/Page_admin.html.twig" %}
{% block body %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#Raslen tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <style>
        a.btn {
            -webkit-transform: scale(0.8);
            -moz-transform: scale(0.8);
            -o-transform: scale(0.8);
            -webkit-transition-duration: 0.5s;
            -moz-transition-duration: 0.5s;
            -o-transition-duration: 0.5s;
        }
        .test{
            padding-left: 3rem;
            padding-right: 3rem;
        }
    </style>
    <div class="test">
    <div class="col-lg-20 grid-margin stretch-card" xmlns="http://www.w3.org/1999/html">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Liste des événements</h1>

                <div class="table-responsive pt-3">



                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                Nom
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Adresse
                            </th>
                            <th>
                                Organisateur
                            </th>
                            <th>
                                Num
                            </th>

                            <th>
                                Date debut
                            </th>

                            <th>
                                Date fin
                            </th>


                            <th>
                                description
                            </th>

                            <th>
                                nbr participant
                            </th>

                            <th>
                                Affiche
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody id="Raslen">
                        {% for e in event %}

                            <tr>
                                <td>
                                    {{ e.id }}
                                </td>
                                <td>
                                    {{ e.nom }}
                                </td>
                                <td>
                                    {{ e.type }}

                                </td>
                                <td>
                                    {{ e.adresse }}
                                </td>
                                <td>
                                    {{ e.organisateur }}
                                </td>
                                <td>
                                    {{ e.num }}
                                </td>

                                <td>
                                    {{ e.datedebut|date('d-m-Y') }}
                                </td>

                                <td>
                                    {{ e.datefin|date('d-m-Y') }}
                                </td>

                                <td>
                                    {{ e.description }}
                                </td>

                                <td>
                                    {{ e.nbrparticipant }}
                                </td>

                                <td>
                                    <img src="{{ asset('Upload/')}}{{ e.nomfile }}" width="100" class="img-circle" />

                                </td>


                                <td>
                                    <a class="btn btn-success a-btn-slide-text" href="{{ path('event_modifier',{'id':e.id}) }}">
                                        <span class="fas fa-edit" aria-hidden="true"></span>
                                        <span><strong>Modifier</strong></span></a>
                                    <a class="btn btn-danger a-btn-slide-text" href="{{ path('event_delete',{'id':e.id}) }}">
                                        <span class="fas fa-minus-circle" aria-hidden="true"></span>
                                        <span><strong>Supprimer</strong></span></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}